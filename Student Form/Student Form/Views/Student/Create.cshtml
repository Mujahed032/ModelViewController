@model Student_Form.Models.Student

<h2>Create Student</h2>
<style>
    form{
        background-color : grey;
        padding:10px;
        width : max-content;
        border-radius : 15px;
    }
    .control-label{
        color:red;
    }
    .btn-primary{
      
        
        color : green;
        background-color: tomato;
   
    }
    
</style>

<form asp-action="Create">
    <div class="alert alert-warning  pt-0 ps-1 pe-1" role="alert">
        <label asp-for="StudentName" class="control-label"></label>
        <input asp-for="StudentName" class="form-control" />
        <span asp-validation-for="StudentName" class="text-danger"></span>
    </div>

    <div class="alert alert-danger" role="alert">
        <label asp-for="Gender" class="control-label"></label>
        <select asp-for="Gender" class="form-control">
             <option value="">Select</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="alert alert-primary" role="alert">
        <label asp-for="DateOfBirth" class="control-label"></label>
        <input asp-for="DateOfBirth" class="form-control" type="date" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div class="alert alert-secondary" role="alert">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Hobbies" class="control-label"></label>
        <select asp-for="Hobbies" class="form-control">
             <option value="">Select</option>
            <option value="Music">Music</option>
            <option value="Movies">Movies</option>
            <option value="Sports">Sports</option>
            <option value="Travel">Travel</option>
        </select>
        <span asp-validation-for="Hobbies" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Course" class="control-label"></label>
        <select asp-for="Course" class="form-control">
             <option value="">Select</option>
            <option value="Btech">Btech</option>
            <option value="MBBS">MBBS</option>
            <option value="Bcom">Bcom</option>
        </select>
        <span asp-validation-for="Course" class="text-danger"></span>
    </div>

    <!-- Permanent Address -->
    <h3>Permanent Address</h3>
    <div class="form-group">
        <label asp-for="PermanentAddress.State" class="control-label"></label>
        <input asp-for="PermanentAddress.State" class="form-control" />
        <span asp-validation-for="PermanentAddress.State" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PermanentAddress.City" class="control-label"></label>
        <input asp-for="PermanentAddress.City" class="form-control" />
        <span asp-validation-for="PermanentAddress.City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PermanentAddress.Street" class="control-label"></label>
        <input asp-for="PermanentAddress.Street" class="form-control" />
        <span asp-validation-for="PermanentAddress.Street" class="text-danger"></span>
    </div>

    <!-- Checkbox to indicate same current address as permanent address -->
    <div class="form-check">
        <input type="checkbox" id="sameAsPermanent" class="form-check-input" />
        <label class="form-check-label" for="sameAsPermanent">Same as Permanent Address</label>
    </div>

    <!-- Current Address -->
    <h3>Current Address</h3>
    <div class="form-group">
        <label asp-for="CurrentAddress.State" class="control-label"></label>
        <input asp-for="CurrentAddress.State" class="form-control" />
        <span asp-validation-for="CurrentAddress.State" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentAddress.City" class="control-label"></label>
        <input asp-for="CurrentAddress.City" class="form-control" />
        <span asp-validation-for="CurrentAddress.City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentAddress.Street" class="control-label"></label>
        <input asp-for="CurrentAddress.Street" class="form-control" />
        <span asp-validation-for="CurrentAddress.Street" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary mt-3" />
    </div>
</form>

<script>
    // JavaScript to copy values from Permanent Address to Current Address
    document.getElementById("sameAsPermanent").addEventListener("change", function () {
        if (this.checked) {
            // If checkbox is checked, copy values from Permanent Address to Current Address
            document.getElementById("CurrentAddress_State").value = document.getElementById("PermanentAddress_State").value;
            document.getElementById("CurrentAddress_City").value = document.getElementById("PermanentAddress_City").value;
            document.getElementById("CurrentAddress_Street").value = document.getElementById("PermanentAddress_Street").value;
        } else {
            // If checkbox is unchecked, clear Current Address fields
            document.getElementById("CurrentAddress_State").value = "";
            document.getElementById("CurrentAddress_City").value = "";
            document.getElementById("CurrentAddress_Street").value = "";
        }
    });
</script>


