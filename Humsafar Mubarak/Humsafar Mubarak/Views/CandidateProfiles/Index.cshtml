@model IEnumerable<CandidateProfile>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <a href="c:\users\hp\onedrive\documents\visual studio 2022\mvc\mvc-rungroopwebapp\mvc-rungroopwebapp\views\club\index.cshtml">c:\users\hp\onedrive\documents\visual studio 2022\mvc\mvc-rungroopwebapp\mvc-rungroopwebapp\views\club\index.cshtml</a>
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap">
