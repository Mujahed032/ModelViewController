                                    <a asp-controller="CandidateProfiles" asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">Delete</a>
                                </div>
                                <small class="text-muted">@item.Age</small>
                            </div>
                        </div>
                    </div>
                </div>
